<UserControl x:Class="domaci_pzw_1.Controls.StatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:domaci_pzw_1.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400"
             x:Name="StatusItemControl">
    <Viewbox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <controls:ImageControl Width="85" Height="80" HorizontalAlignment="Left" Margin="5" Grid.Column="0" x:Name="ImgCtrl"></controls:ImageControl>
            <TextBlock Width="auto" Height="80" Margin="50 30 0 10" FontSize="20" Grid.Column="1" Text="{Binding ElementName=StatusItemControl, Path=Status}"></TextBlock>
            <Border Height="1" Width="auto" Grid.Column="1" Margin="50 40 20 0" BorderBrush="Black" BorderThickness="1"></Border>
        </Grid>
    </Viewbox>
</UserControl>
